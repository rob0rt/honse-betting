generator client {
  provider   = "prisma-client"
  output     = "../src/lib/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id
  username String
  avatar   String?
  balance  Int     @default(0)
  admin    Boolean @default(false)
  bets     Bet[]
}

model Race {
  id     Int         @id @default(autoincrement())
  date   DateTime
  bets   Bet[]
  horses RaceHorse[]
}

model Horse {
  id    Int         @id @default(autoincrement())
  name  String
  races RaceHorse[]
}

model RaceHorse {
  raceId       Int
  horseId      Int
  saddleNumber Int
  place        Int?

  race  Race  @relation(fields: [raceId], references: [id])
  horse Horse @relation(fields: [horseId], references: [id])

  @@id([raceId, horseId])
  @@unique([raceId, saddleNumber])
  @@index(raceId)
}

enum BetType {
  WIN
  PLACE
  SHOW
  EXACTA
  TRIFECTA
}

model Bet {
  id     Int @id @default(autoincrement())
  amount Int

  userId String
  raceId Int

  type BetType
  data Json

  user User @relation(fields: [userId], references: [id])
  race Race @relation(fields: [raceId], references: [id])
}
