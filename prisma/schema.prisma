generator client {
  provider = "prisma-client"
  output   = "../src/lib/server/db"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  username String
  balance  Int       @default(0)
  bets     Bet[]
  sessions Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime

  // Encrypted at rest
  accessToken  String
  refreshToken String

  user User @relation(fields: [userId], references: [id])
}

model Race {
  id   Int   @id @default(autoincrement())
  bets Bet[]
}

enum BetType {
  WIN
  PLACE
  SHOW
  EXACTA
  TRIFECTA
}

model Bet {
  id     Int @id @default(autoincrement())
  amount Int

  userId String
  raceId Int

  type BetType
  data Json

  user User @relation(fields: [userId], references: [id])
  race Race @relation(fields: [raceId], references: [id])
}
